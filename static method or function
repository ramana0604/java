package pack2;
import java.util.Scanner;
public class staticMethod {//create static method
 public static int add(int a,int b) {
	 return a+b;//using return function for adding two number
	 
 }
 
	public static void main(String[] args) {
		Scanner add=new Scanner(System.in);//getting input from user
		System.out.println("enter num 1:");
		int num1=add.nextInt();
		
		System.out.println("enter num 2:");
		int num2=add.nextInt();
		int total=add(num1,num2);//assign the value for a add b static variables
		System.out.println("total of given number is:"+total);//print the variable
		

	}

}
